<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chb.dao.ExchangeRateMapper">
    <insert id="addExchangeRate" parameterType="ExchangeRate">
        insert into exchangerate(currency,name,data,status,type)
        values (#{currency},#{name},#{data},#{status},#{type});
    </insert>
    <delete id="deleteExchangeRateById" parameterType="int">
        delete from exchangerate
        where id=#{id}
    </delete>
    <update id="updateExchangeRate" parameterType="ExchangeRate">
        update exchangerate
        set currency=#{currency},name=#{name},data=#{data},data_memory=#{data_memory},status=#{status},type=#{type}
        where id=#{id};
    </update>
    <select id="queryExchangeRateById" resultType="ExchangeRate">
        select * from exchangerate
        where id=#{id}
    </select>
    <select id="queryAllExchangeRate" resultType="ExchangeRate">
        select * from exchangerate
    </select>
    <select id="queryExchangeRateByName" resultType="ExchangeRate">
        select  * from exchangerate
        where name like "%"#{name}"%"
    </select>
    <select id="queryByType" resultType="ExchangeRate">
        select  * from exchangerate
        where type=#{type}
    </select>
    <update id="updateERStatusById" >
        update exchangerate
        set status=#{status}
        where id=#{id}
    </update>
    <select id="queryByCurrency" resultType="ExchangeRate">
        select *
        from exchangerate
        where  data !=""
        and type=#{type}
        and currency=#{currency}
    </select>
    <select id="queryByName" resultType="ExchangeRate">
        select *
        from exchangerate
        where name like "%"#{name}"%"
        and type=#{type}
    </select>
    <update id="updateERDataById">
        update exchangerate
        set data=data_memory,data_memory=null,status="1"
        where id=#{id}
    </update>
</mapper>